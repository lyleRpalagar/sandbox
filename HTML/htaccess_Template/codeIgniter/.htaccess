<IfModule mod_rewrite.c>
 
# ciHTACCESS, by Mario "Kuroir" Ricalde
RewriteEngine On
RewriteBase /


# Redirect index.php and default controller (you need to edit this) to "/". This is to prevent duplicated
# Content. ( /main/index , index.php => /)
RewriteRule ^(main(/index)?|index(\.php)?)/?$ / [L,R=301]

# Redirects your page without the controller name
# example: www.sitename.com/controller/page => www.sitename.com/page
# http://stackoverflow.com/questions/18600332/htaccess-not-redirecting-from-old-url-to-new-url


RewriteRule ^main/attractions http://www.waterburyinn.com/attractions [R=301,L]
RewriteRule ^main/amenities http://www.waterburyinn.com/amenities [R=301,L]
RewriteRule ^main/specials http://www.waterburyinn.com/specials [R=301,L]
RewriteRule ^main/reservations http://www.waterburyinn.com/reservations [R=301,L]
RewriteRule ^main/contact http://www.waterburyinn.com/contact [R=301,L]
RewriteRule ^main/blog http://www.waterburyinn.com/blog [R=301,L]

# Remove /index/ segment on the URL.
RewriteRule ^(.*)/index/? $1 [L,R=301]
#RewriteRule ^(.*)index.php? $1 [L,R=301]

# Remove Trailing Slashes.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)(/+)$ $1 [L,R=301]

# Remove Multiple slashes in betweeen
RewriteCond %{REQUEST_URI} ^(.*)//(.*)$
RewriteRule . %1/%2 [R=301,L]

# Add the file SUFIX (sufix can be set on config.php).
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteCond %{REQUEST_URI} !\.html
# RewriteRule ^(.+)$ $1\.html [L,R=301]

# Remove any slash before .html ( to prevent site/.html )
# RewriteCond %{REQUEST_URI} \/+\.html$ [NC]
# RewriteRule ^(.+)\/+\.html$ $1\.html [L,R=301]

# Send everything to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]


# Enforce www
# If you have subdomains, you can add them to 
# the list using the "|" (OR) regex operator
RewriteCond %{HTTP_HOST} .
RewriteCond %{HTTP_HOST} !^www.waterburyinn.com [NC]
RewriteRule (.*) http://www.waterburyinn.com/$1 [R=301,L]

</IfModule> 






